
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    match /users/{userId} {
      // Allow user to read their own document.
      allow get: if isOwner(userId);
      // Allow a user to create their own document
      allow create: if isOwner(userId);
      // Balance updates are handled by a secure backend now (API route), 
      // so client-side updates are no longer needed.
      allow update: if isOwner(userId);
      allow list, delete: if false;

      // /users/{userId}/inventory/{nftId}
      match /inventory/{nftId} {
        // A user can fully manage their own inventory
        allow read, create, update, delete: if isOwner(userId);
      }
    }
    
    // /auctions/{auctionId}
    match /auctions/{auctionId} {
      // ANYONE can read the list of auctions or a specific auction.
      allow get, list: if true;
      
      // CREATE: Only the owner of the NFT can create an auction.
      // The incoming resource's ownerId must match the signer's UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Allow signed-in users to update the highestBid and highestBidderId.
      // This allows the 'placeBid' transaction to work.
      allow update: if isSignedIn();
      
      // DELETE: Deleting auctions is disallowed. They should be handled by a backend process.
      allow delete: if false;
    }
  }
}
