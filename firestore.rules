
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow list, delete: if false;

      // /users/{userId}/inventory/{nftId}
      match /inventory/{nftId} {
        allow get, list: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // /auctions/{auctionId}
    match /auctions/{auctionId} {
      // ANYONE can read the list of auctions or a specific auction.
      allow get, list: if true;
      
      // CREATE: Only the owner of the NFT can create an auction.
      // The incoming resource's ownerId must match the signer's UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Allow users to update the highestBid if they are signed in.
      // Other fields should be protected.
      // (This is a simplified rule; a real app would have more complex bid validation)
      allow update: if isSignedIn();
      
      // DELETE: Deleting auctions is disallowed. They should be handled by a backend process.
      allow delete: if false;
    }
  }
}
