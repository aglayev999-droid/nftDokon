
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Function to check if the user is an admin
    function isAdmin() {
      // An admin's UID must exist in the /admins collection.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // /users/{userId}
    match /users/{userId} {
      allow get, create, update: if isOwner(userId);
      // Allow admins to list all users for the admin panel
      allow list: if isAdmin();
      allow delete: if false;

      // /users/{userId}/inventory/{nftId}
      match /inventory/{nftId} {
        // A user can read their own inventory
        allow get, list: if isOwner(userId);
        
        // A user can create and update their own inventory items.
        // Deleting from inventory is now part of the 'withdraw' process,
        // which creates a request document. The client can delete its own item.
        allow create, update, delete: if isOwner(userId);
      }
    }
    
    // /admins/{adminId}
    // Only admins can read the list of other admins.
    match /admins/{adminId} {
        allow get, list: if isAdmin();
        // Disallow client-side creation/deletion of admins for security.
        allow create, update, delete: if false;
    }
    
    // /auctions/{auctionId}
    match /auctions/{auctionId} {
      // ANYONE can read the list of auctions or a specific auction.
      allow get, list: if true;
      
      // CREATE: Only the owner of the NFT can create an auction.
      // The incoming resource's ownerId must match the signer's UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Allow signed-in users to update the highestBid and highestBidderId.
      // This allows the 'placeBid' transaction to work.
      allow update: if isSignedIn();
      
      // DELETE: Deleting auctions is disallowed. They should be handled by a backend process.
      allow delete: if false;
    }

    // /withdrawals/{withdrawalId}
    match /withdrawals/{withdrawalId} {
      // Users can create their own withdrawal requests.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Only the site admin (or a backend function) should read or modify requests.
      // We'll leave this as false for client-side access.
      allow read, list, update, delete: if false;
    }
  }
}
