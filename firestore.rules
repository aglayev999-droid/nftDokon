
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // An admin's UID must exist in the /admins collection.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // /users/{userId}
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      // Anyone can create their own user account on first load
      allow create: if isOwner(userId);
      // Admins can list/read all user data
      allow list, get: if isAdmin();
      allow delete: if false;

      // /users/{userId}/inventory/{nftId}
      match /inventory/{nftId} {
        // A user can read their own inventory
        allow get, list: if isOwner(userId);
        
        // Creating and deleting inventory items is now handled by server-side transactions
        // (moving to/from marketplace, auctions, or withdrawals).
        // Direct client manipulation is disallowed to maintain integrity.
        allow create, update, delete: if false;
      }
    }
    
    // /admins/{adminId}
    match /admins/{adminId} {
        allow get, list: if isAdmin();
        // Allow a user to create THEIR OWN admin document.
        // The logic in admin-context.tsx ensures only true admins attempt this write.
        allow create: if isOwner(adminId);
        allow update, delete: if false;
    }

    // /marketplace/{nftId}
    match /marketplace/{nftId} {
      // ANYONE can read the list of items for sale or a specific item.
      allow get, list: if true;
      
      // CREATE: An NFT can be created here only if it's coming from the owner's inventory.
      // The `setNftForSale` transaction handles this logic, so we allow signed-in users.
      // The ownerId in the resource must match the user's auth UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // DELETE: An NFT can be deleted from the marketplace in two cases:
      // 1. It is being purchased (handled by the `buyNft` transaction).
      // 2. It is being unlisted by its owner.
      allow delete: if isSignedIn(); // Transactions will enforce ownership/purchase logic.

      // UPDATE: Disallow direct updates to marketplace items.
      allow update: if false;
    }
    
    // /auctions/{auctionId}
    match /auctions/{auctionId} {
      // ANYONE can read the list of auctions or a specific auction.
      allow get, list: if true;
      
      // CREATE: Only the owner of the NFT can create an auction.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Allow signed-in users to update the highestBid and highestBidderId.
      allow update: if isSignedIn();
      
      // DELETE: Deleting auctions is disallowed. They are handled by a backend process.
      allow delete: if false;
    }

    // /withdrawals/{withdrawalId}
    match /withdrawals/{withdrawalId} {
      allow read, write: if false;
    }
  }
}
