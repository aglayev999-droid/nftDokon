
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // /users/{userId}
    match /users/{userId} {
      // Allow user to read their own document.
      allow get: if isOwner(userId);
      // Allow any signed-in user to update a user document (for balance transfers).
      // In a real app, this would be much stricter, likely handled by Cloud Functions.
      allow update: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow list, delete: if false;

      // /users/{userId}/inventory/{nftId}
      match /inventory/{nftId} {
        // Allow owner to read and create/update their own NFTs.
        allow read, create, update: if isOwner(userId);
        // Allow any signed-in user to delete an NFT from another's inventory.
        // This is necessary for the client-side 'buyNft' transaction to work.
        // A more secure implementation would use a Cloud Function.
        allow delete: if isSignedIn();
      }
    }
    
    // /auctions/{auctionId}
    match /auctions/{auctionId} {
      // ANYONE can read the list of auctions or a specific auction.
      allow get, list: if true;
      
      // CREATE: Only the owner of the NFT can create an auction.
      // The incoming resource's ownerId must match the signer's UID.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // UPDATE: Allow signed-in users to update the highestBid and highestBidderId.
      // This allows the 'placeBid' transaction to work.
      allow update: if isSignedIn();
      
      // DELETE: Deleting auctions is disallowed. They should be handled by a backend process.
      allow delete: if false;
    }
  }
}
